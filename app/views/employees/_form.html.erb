<% if flash[:info] %>
  <div class="alert alert-info"><%= flash[:info] %></div>
<% else %>
  <% flash.each do |message_type, messages| %>
    <% messages.each do |message| %>
      <div class="alert alert-<%= message_type %>"><%= message[1][0] %></div>
    <% end %>
  <% end %>
<% end %>

<%= form_with(model: employee, local: true, class: "form") do |form| %>
  <div class="form-group row">
    <%= form.label "名前", for: "name", class: "col-sm-2" %>
    <%= form.text_field :name, id: "name", class: "col-sm-5" %>
  </div>

  <div class="form-group row">
    <%= form.label "入社日", class: "col-sm-2" %>
    <%=
      raw sprintf(
        form.date_select(
          :join_date,
          use_month_numbers: true,
          class: "col-sm-10",
          date_separator: '%s'
        ),
        '年 ', '月 '
      ) + '日'
    %>
  </div>

  <div class="form-group row">
    <%= form.label "性別", class: "col-sm-2" %>
    <div class="radio_group col-sm-10">
      <label><%= form.radio_button :gender_id, 1, checked: true %>男</label>
      <label><%= form.radio_button :gender_id, 2 %>女</label>
      <label><%= form.radio_button :gender_id, 3 %>その他</label>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label "役職", for: "position", class: "col-sm-2" %>
    <%= form.text_field :position, id: "position", class: "col-sm-5" %>
  </div>

  <div class="form-group row">
    <%= form.label "メールアドレス", for: "email", class: "col-sm-2" %>
    <%= form.text_field :email, id: "email", class: "col-sm-5" %>
  </div>

  <div class="actions">
    <%= 
      (@submit_str == "登録") ? 
      (link_to '一覧へ', employees_path, class: "btn btn-lg btn-outline-secondary col-sm-2") :
      (link_to 'キャンセル', @employee, class: "btn btn-lg btn-outline-secondary col-sm-2")
    %>
    <%= form.submit value: @submit_str, class: "btn btn-lg btn-outline-primary col-sm-2" %>
  </div>
<% end %>
