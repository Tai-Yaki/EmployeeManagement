<h1>従業員一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>
        名前
      </th>
      <th>
        入社年月日
      </th>
      <th>
        性別
      </th>
      <th>
        役職
      </th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td>
          <%= employee.name %>
        </td>
        <td>
          <%= employee.join_date.to_date %>
        </td>
        <td>
          <%= employee.gender.name %>
        </td>
        <td>
          <%= employee.position %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
