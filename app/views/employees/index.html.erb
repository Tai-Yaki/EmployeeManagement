<div class="employees">
  <div class="top-content">
    <h1>従業員一覧</h1>
    <%= button_to("従業員追加", {action: "new"}, method: :get, class: "btn-bg btn-primary" ) %>
  </div>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>
          #
        </th>
        <th>
          名前
        </th>
        <th>
          入社日
        </th>
        <th>
          性別
        </th>
        <th>
          役職
        </th>
        <th class="btn-th"></th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each_with_index do |employee, i| %>
        <tr>
          <td scope="row">
            <%= i + 1 %>
          </td>
          <td>
            <%= employee.name %>
          </td>
          <td>
            <%= employee.join_date.to_date %>
          </td>
          <td>
            <%= employee.gender.name %>
          </td>
          <td>
            <%= employee.position %>
          </td>
          <td class="btn-td">
            <div class="btn-wrap">
              <%= button_to("詳細", {action: "show", id: employee.id}, method: :get, class: "btn-bg btn-outline-primary" ) %>
              <%= button_to("編集", {action: "edit", id: employee.id}, method: :get, class: "btn-bg btn-outline-primary" ) %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
